<!doctype html>
<html lang="ja">
  <head>
    <%- include('../meta'); -%>
    <script src="/login.js" defer></script>
  </head>
  <body>
    <%- include('../header'); -%>
    <div class="bg-primary p-2 text-dark bg-opacity-10 border">
      <h2>ログイン</h2>
      <form action="/auth/login" method="post">
        <label for="stNumber">学生番号</label>
        <input type="text" name="stNumber" id="stNumber" />
        <label for="text">パスワード</label>
        <input type="password" name="password" id="password" />
        <input
          type="submit"
          value="ログイン"
          id="submit"
          class="alert alert-primary"
        />
      </form>
      <form action="/auth/signup" method="get">
        <input
          type="submit"
          value="アカウントを作成"
          class="alert alert-primary"
        />
      </form>
    </div>
    <%- include('../footer'); -%>
  </body>
</html>
